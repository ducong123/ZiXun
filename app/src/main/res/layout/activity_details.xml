<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.nainaiwang.zixun.DetailsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/relativelayout_details_back"
            android:layout_width="40dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="20dp"
                android:layout_height="15dp"
                android:layout_centerInParent="true"
                android:background="@mipmap/back" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="耐耐资讯"
            android:textSize="17sp" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_color" />

    <!--<WebView-->
        <!--android:id="@+id/webview_details_webview"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_marginBottom="20dp">-->

    <!--</WebView>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textview_shoppingdetails_addtogouwuche"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="#ffffff"
            android:gravity="center"
            android:text="想说点什么？"
            android:textColor="@android:color/darker_gray" />


        <RelativeLayout
            android:id="@+id/relativelayout_shoppingdetails_kefu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/white" >


            <ImageView
                android:id="@+id/imageview_shoppingdetails_kefu"
                android:layout_width="21dp"
                android:layout_height="15dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="11dp"
                android:src="@drawable/talk" />

            <TextView
                android:id="@+id/textview_shoppingdetails_kefu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageview_shoppingdetails_kefu"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="评论"
                android:textSize="11.5sp" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/relativelayout_shoppingdetails_save"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/white" >


            <ImageView
                android:id="@+id/imageview_shoppingdetails_save"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="9dp"
                android:src="@drawable/savebtnno" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageview_shoppingdetails_save"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="收藏"
                android:textSize="11.5sp" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/relativelayout_shoppingdetails_kefu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/white" >


            <ImageView
                android:id="@+id/imageview_shoppingdetails_kefu"
                android:layout_width="21dp"
                android:layout_height="15dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="11dp"
                android:src="@drawable/share" />

            <TextView
                android:id="@+id/textview_shoppingdetails_kefu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageview_shoppingdetails_kefu"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="分享"
                android:textSize="11.5sp" />
        </RelativeLayout>

    </LinearLayout>


</LinearLayout>
