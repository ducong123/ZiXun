<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
        android:id="@+id/imageview_itemchannelone_image"
        android:layout_width="112dp"
        android:layout_height="82dp"
        android:layout_gravity="center_vertical"
        android:background="#f5f5f5" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/textview_itemchannelone_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/text_color1"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/textview_itemchannelone_zixun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textColor="@color/text_color2"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textview_itemchannelone_ad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textColor="#2e70e9"
            android:text="广告"
            android:background="@drawable/shape_adbackground"
            android:padding="5dp"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textview_itemchannelone_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/textview_itemchannelone_zixun"
            android:textColor="@color/text_color2"
            android:textSize="12sp" />
    </RelativeLayout>

</LinearLayout>
